<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset User Password - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Custom Scrollbar for better aesthetics in dark mode */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: transparent;
      }
      ::-webkit-scrollbar-thumb {
        background-color: rgba(
          156,
          163,
          175,
          0.4
        ); /* Tailwind's gray-400 with opacity */
        border-radius: 4px;
      }

      /* Backdrop filter for the frosted glass effect */
      .frosted-glass {
        backdrop-filter: blur(20px) saturate(200%);
        background-color: rgba(
          31,
          41,
          55,
          0.7
        ); /* A semi-transparent dark gray */
      }
    </style>
  </head>
  <body
    class="bg-gray-950 text-gray-100 font-sans h-screen w-screen p-4 flex justify-center items-center overflow-auto"
  >
    <div
      class="frosted-glass w-full rounded-none md:rounded-2xl md:max-w-xl shadow-2xl flex flex-col overflow-hidden border border-gray-700 p-8 md:p-12 my-auto"
    >
      <div class="flex flex-col items-center justify-center text-center mb-8">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-16 w-16 text-red-500 mb-4"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
          fill="none"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v3h8z"
          />
        </svg>
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-50">
          Reset Password
        </h1>
        <p class="mt-2 text-gray-400">
          Set a new password for user :<span class="text-purple-400">
            <%= userToUpdatePassword.email %></span
          >
        </p>
      </div>

      <form
        class="w-full max-w-lg mx-auto space-y-6"
        method="post"
        action="/userEditByAdmin/userPasswordResetByAdmin/<%= userToUpdatePassword._id %>"
      >
        <div>
          <label
            for="newPassword"
            class="block text-sm font-medium text-gray-200"
            >New Password</label
          >
          <div class="mt-1 relative rounded-md shadow-sm">
            <div
              class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
            >
              <svg
                class="h-5 w-5 text-gray-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M18 8a6 6 0 01-7.743 5.743L10 14h.001l-.001-.002A6 6 0 0118 8zm-2-1a1 1 0 00-1 1v1h-1V8a1 1 0 00-2 0v1H9V8a1 1 0 00-2 0v1H6V8a1 1 0 00-2 0v1H3V8a1 1 0 00-2 0v8a1 1 0 001 1h16a1 1 0 001-1V8a1 1 0 00-1-1h-2z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <input
              id="newPassword"
              name="newPassword"
              type="password"
              required
              minlength="8"
              class="block w-full pl-10 pr-4 py-2 rounded-lg bg-gray-700 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300"
              placeholder="Enter new password"
            />
          </div>
        </div>

        <div>
          <label
            for="confirmPassword"
            class="block text-sm font-medium text-gray-200"
            >Confirm Password</label
          >
          <div class="mt-1 relative rounded-md shadow-sm">
            <div
              class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
            >
              <svg
                class="h-5 w-5 text-gray-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M18 8a6 6 0 01-7.743 5.743L10 14h.001l-.001-.002A6 6 0 0118 8zm-2-1a1 1 0 00-1 1v1h-1V8a1 1 0 00-2 0v1H9V8a1 1 0 00-2 0v1H6V8a1 1 0 00-2 0v1H3V8a1 1 0 00-2 0v8a1 1 0 001 1h16a1 1 0 001-1V8a1 1 0 00-1-1h-2z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <input
              id="confirmPassword"
              name="confirmPassword"
              type="password"
              required
              minlength="8"
              class="block w-full pl-10 pr-4 py-2 rounded-lg bg-gray-700 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300"
              placeholder="Confirm new password"
            />
          </div>
        </div>

        <div>
          <button
            type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-300"
          >
            Reset Password
          </button>
        </div>
      </form>

      <div class="mt-6 text-center text-sm">
        <p class="text-gray-400">
          <a
            href="/userListForAdmin"
            class="font-medium text-purple-400 hover:text-purple-500"
            >&larr; Back to User List</a
          >
        </p>
      </div>
    </div>
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.querySelector("form");
      const newPasswordInput = document.getElementById("newPassword");
      const confirmPasswordInput = document.getElementById("confirmPassword");

      // Add an optional visual error indicator for better UX
      const passwordMatchError = document.createElement("p");
      passwordMatchError.id = "passwordMatchError";
      passwordMatchError.className = "text-red-400 text-sm mt-2 hidden";
      passwordMatchError.textContent = "Passwords do not match.";

      // Insert the error message after the confirm password input's parent div
      confirmPasswordInput.parentNode.parentNode.appendChild(
        passwordMatchError
      );

      form.addEventListener("submit", function (event) {
        if (newPasswordInput.value !== confirmPasswordInput.value) {
          // Prevent the form from submitting
          event.preventDefault();

          // Show the error message
          passwordMatchError.classList.remove("hidden");
          confirmPasswordInput.classList.add(
            "border-red-500",
            "focus:ring-red-500"
          ); // Optional: Add a visual error on the input
          newPasswordInput.classList.add(
            "border-red-500",
            "focus:ring-red-500"
          );

          // Optional: Alert or focus for immediate attention
          // alert('Error: New password and confirm password do not match.');
          confirmPasswordInput.focus();
        } else {
          // Hide error message and remove error styles if they match
          passwordMatchError.classList.add("hidden");
          confirmPasswordInput.classList.remove(
            "border-red-500",
            "focus:ring-red-500"
          );
          newPasswordInput.classList.remove(
            "border-red-500",
            "focus:ring-red-500"
          );
        }
      });
    });
  </script>
</html>
